<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the switch is checked -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <size android:height="24dp"/>
            <stroke android:color="@color/gray"
                android:width="1dp"/>
            <solid android:color="@color/green"/> <!-- Purple color when ON -->
        </shape>
    </item>
    <!-- State when the switch is not checked -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <size android:height="24dp"/>
            <stroke android:color="@color/gray"
                android:width="1dp"/>
            <solid android:color="#E0E0E0"/> <!-- Light gray color when OFF -->
        </shape>
    </item>
</selector>
