<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.create_avtar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="backavtar"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_weight="1"
            android:fontFamily="@font/robotoregular"
            android:text="Help centre"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:paddingVertical="@dimen/_3sdp"
            android:src="@drawable/ic_check"
            android:tint="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e8e8" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/_10sdp">



                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/linner"
                        android:background="@drawable/circle_background1"
                        android:padding="@dimen/_10sdp"/>
                    <ImageView
                        android:id="@+id/avatarImage"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_130sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:src="@drawable/avtar1" />
                </FrameLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="#e7e8e8" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:fontFamily="@font/robotoregular"
                    android:text="Avatar"
                    android:textColor="@color/gray"
                    android:layout_marginHorizontal="@dimen/_15sdp"

                    android:textSize="@dimen/_12ssp" />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scrollbars="none"

                    android:fillViewport="false">
                    <RadioGroup
                        android:id="@+id/rgAvatarOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:orientation="horizontal">
                        <!--                <RadioButton-->
                        <!--                    android:layout_width="70dp"-->
                        <!--                    android:layout_height="70dp"-->
                        <!--                    android:layout_marginHorizontal="@dimen/_25sdp"-->
                        <!--                    android:button="@null"-->
                        <!--                    android:drawableBottom="@drawable/avtar1_"-->
                        <!--                    android:paddingBottom="@dimen/_3sdp"-->
                        <!--                    android:gravity="center"-->
                        <!--                    android:text=""-->
                        <!--                    android:background="@drawable/radio_button_sec" />-->
                        <RadioButton
                            android:id="@+id/rbAvatar1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="8dp"
                            android:button="@null"
                            android:drawableBottom="@drawable/avtar1_"
                            android:paddingBottom="@dimen/_3sdp"
                            android:gravity="center"
                            android:text=""
                            android:checked="true"
                            android:background="@drawable/radio_button_sec" />

                        <RadioButton
                            android:id="@+id/rbAvatar2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="8dp"
                            android:button="@null"
                            android:drawableBottom="@drawable/avtar2_"
                            android:paddingBottom="@dimen/_3sdp"
                            android:gravity="center"
                            android:text=""
                            android:background="@drawable/radio_button_sec" />

                        <RadioButton
                            android:id="@+id/rbAvatar3"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="8dp"
                            android:background="@drawable/radio_button_sec"
                            android:button="@null"
                            android:drawableBottom="@drawable/avtar3__"
                            android:gravity="center"
                            android:paddingBottom="@dimen/_3sdp"
                            android:text="" />

                        <RadioButton
                            android:id="@+id/rbAvatar4"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="8dp"
                            android:button="@null"
                            android:drawableBottom="@drawable/avtar4_"
                            android:paddingBottom="@dimen/_3sdp"
                            android:gravity="center"
                            android:text=""
                            android:background="@drawable/radio_button_sec" />
                        <RadioButton
                            android:id="@+id/rbAvatar5"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="8dp"
                            android:button="@null"
                            android:drawableBottom="@drawable/avtar5_"
                            android:paddingBottom="@dimen/_3sdp"
                            android:gravity="center"
                            android:text=""
                            android:background="@drawable/radio_button_sec" />
                        <RadioButton
                            android:id="@+id/rbAvatar6"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="8dp"
                            android:button="@null"
                            android:drawableBottom="@drawable/avtar6_"
                            android:paddingBottom="@dimen/_3sdp"
                            android:gravity="center"
                            android:text=""
                            android:background="@drawable/radio_button_sec" />
                        <RadioButton
                            android:id="@+id/rbAvatar7"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="8dp"
                            android:button="@null"
                            android:drawableBottom="@drawable/avtar7_"
                            android:paddingBottom="@dimen/_3sdp"
                            android:gravity="center"
                            android:text=""
                            android:background="@drawable/radio_button_sec" />
                        <RadioButton
                            android:id="@+id/rbAvatar8"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="8dp"
                            android:button="@null"
                            android:drawableBottom="@drawable/avtar8_"
                            android:paddingBottom="@dimen/_3sdp"
                            android:gravity="center"
                            android:text=""
                            android:background="@drawable/radio_button_sec" />
                        <!-- Add more RadioButtons as needed -->
                        <RadioButton
                            android:id="@+id/rbAvatar9"
                            android:layout_width="40dp"
                            android:visibility="invisible"
                            android:layout_height="70dp"

                            android:button="@null"
                            android:drawableBottom="@drawable/avtar1_"
                            android:paddingBottom="@dimen/_3sdp"
                            android:gravity="center"
                            android:text=""
                            android:background="@drawable/radio_button_sec" />
                    </RadioGroup>
                </HorizontalScrollView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:fontFamily="@font/robotoregular"
                    android:text="Background"
                    android:textColor="@color/gray"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:textSize="@dimen/_12ssp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scrollbars="none"

                    android:fillViewport="false">
                    <RadioGroup
                        android:id="@+id/rgBackgroundColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_19sdp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbColor1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:button="@null"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:drawableBottom="@drawable/circle_icon"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:checked="true"
                            android:background="@drawable/radio_button_sec" />

                        <RadioButton
                            android:id="@+id/rbColor2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:button="@null"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:drawableBottom="@drawable/circle_icon2"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:background="@drawable/radio_button_sec"  />
                        <RadioButton
                            android:id="@+id/rbColor3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:button="@null"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:drawableBottom="@drawable/circle_icon3"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:background="@drawable/radio_button_sec" />
                        <RadioButton
                            android:id="@+id/rbColor4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:button="@null"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:drawableBottom="@drawable/circle_icon4"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:background="@drawable/radio_button_sec" />
                        <RadioButton
                            android:id="@+id/rbColor5"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:button="@null"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:drawableBottom="@drawable/circle_icon5"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:background="@drawable/radio_button_sec" />
                        <RadioButton
                            android:id="@+id/rbColor6"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:button="@null"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:drawableBottom="@drawable/circle_icon6"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:background="@drawable/radio_button_sec" />

                        <RadioButton
                            android:id="@+id/rbColor7"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:button="@null"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:drawableBottom="@drawable/circle_icon7"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:background="@drawable/radio_button_sec" />
                        <!-- Add more RadioButtons for colors as needed -->
                        <RadioButton
                            android:id="@+id/rbColor8"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:button="@null"
                            android:visibility="invisible"

                            android:drawableBottom="@drawable/circle_icon7"
                            android:paddingHorizontal="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:background="@drawable/radio_button_sec" />
                    </RadioGroup>
                </HorizontalScrollView>

                <!-- Background Color Options -->


                <!-- Edit Avatar Button -->

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/btnEditAvatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/_7sdp"
        android:background="@drawable/button_background"
        android:layout_margin="@dimen/_15sdp"
        android:fontFamily="@font/robotoregular"
        android:text="Edit Avatar"
        android:textColor="@color/green" />
    <FrameLayout
        android:id="@+id/banner_ad_container"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content" />
</LinearLayout>